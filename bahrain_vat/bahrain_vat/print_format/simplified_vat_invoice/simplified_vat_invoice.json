 "html": "\n<div style='margin-top:25px;font-family:\"serif\";font-size:13px'>\n    <span style='font-size:16px'>\n        {{ doc.company}}\n    </span>\n    <span style='float:right;font-size:16px'>\n        <b>{{'Tax Invoice'}}</b>\n    </span><br>\n    <div class= 'row'>\n        <div class='col-xs-6'>\n    {%if doc.company_address %}\n        {% set company_address=doc.company_address %}\n        {% set address_doc = frappe.get_doc('Address', company_address) %}\n        \n        <div class = 'address-div'>\n            {{ address_doc.address_line1 }}\n        </div>\n        <div class = 'address-div'>\n            {{ address_doc.city}}\n        </div>\n        <div class = 'address-div'>\n            {{ address_doc.country}}\n        </div>\n        <div class = 'address-div'>\n            {{'P.O. Box '}}{{ address_doc.pincode }}\n        </div>\n        <div class = 'address-div'>\n            {{ address_doc.phone }}\n        </div>\n        <div class = 'address-div'>\n            {{ address_doc.email_id }}\n        </div>\n    {% endif %}\n        </div>\n        <div class='col-xs-6'>\n            <img class=\"qr-code\" src={{doc.qr_code}}>\n        </div>\n    </div>\n</div>\n\n<div class='row'>\n<div class='col-xs-6' >\n    <span style='font-size:13px'>\n        <b>{{'Bill To:'}}</b>\n    </span><br>\n    <span style='font-size:13px'>\n        {{doc.customer}}\n    </span>\n</div>\n<div class='col-xs-6' >\n    <table style='width:100%;font-size:13px;float:right '>\n        <tbody>\n            <tr>\n                <td  class=\"text-left\" style=\"padding:0px !important\" >{{ 'Invoice #'}}</td>\n                <td  style=\"padding:0px !important\" >{{':'}}</td>\n                <td  class=\"text-right\" style=\"padding:0px !important\" >{{doc.name}}</td>\n            </tr>\n            <tr>\n                <td  class=\"text-left\" style=\"padding:0px !important\" >{{ 'Invoice Date'}}</td>\n                <td  style=\"padding:0px !important\" >{{':'}}</td>\n                <td class=\"text-right\" style=\"padding:0px !important\" >{{doc.posting_date}}</td>\n            </tr>\n            <tr>\n                <td class=\"text-left\" style=\"padding:0px !important\" >{{ 'Due Date'}}</td>\n                <td style=\"padding:0px !important\" >{{':'}}</td>\n                <td class=\"text-right\" style=\"padding:0px !important\" >{{doc.due_date}}</td>\n            </tr>\n        </tbody>\n    </table>\n</div>\n</div>\n<table class=\"table table-bordered\" style='margin-top:0px;'>\n    <tbody>\n        <tr>\n            <td style='padding:0px !important' colspan=2>\n                <table class=\"table table-bordered\" style=\"border: 1px solid #bdb7b7;border-collapse: collapse;font-family:'serif';margin:0px\">\n                \t<thead>\n                \t\t<tr>\n                \t\t    <th width=\"5%\" style='background-color:#3f4244 !important;color:white;'>{{ _(\"#\") }}</th>\n                \t\t\t<th width=\"45%\" style='background-color:#3f4244 !important;color:white;'>{{ _(\"Description\") }}</th>\n                \t\t\t<th width=\"15%\" style='background-color:#3f4244 !important;color:white;' class=\"\">{{ _(\"Qty\") }}</th>\n                \t\t\t<th width=\"15%\" style='background-color:#3f4244 !important;color:white;' class=\"\">{{ _(\"Rate\") }}</th>\n                \t\t\t<th width=\"20%\" style='background-color:#3f4244!important;color:white;' class=\"\">{{ _(\"Amount\") }}</th>\n                \t\t</tr>\n                \t</thead>\n                \t<tbody>\n                \t    {%- for item in doc.items -%}\n                \t\t<tr>\n                \t\t    <td>\n                \t\t        {{ item.idx }}\n                \t\t    </td>\n                \t\t\t<td>\n                \t\t\t\t{{ item.description }}\n                \t\t\t</td>\n                \t\t\t<td >\n                \t\t\t    <div style=\"display: flex; justify-content: space-between;\">\n                    \t\t\t    <span>{{ item.uom }}</span>\n                    \t\t\t    <span>{{ item.qty }}</span>\n                \t\t\t    </div>\n                \t\t\t</td>\n                \t\t\t<td class=\"text-right\">{{ item.get_formatted(\"rate\") }} </td>\n                \t\t\t<td class=\"text-right\">{{ item.get_formatted(\"amount\") }}</td>\n                \t\t</tr>\n                \t\t{%- endfor -%}\n                \t</tbody>\n                </table>\n            </td>\n        </tr>\n        <tr>\n            <td width=\"80%\" class=\"text-right\" style='border-bottom-color:white;'>\n                {{'Total'}}\n            </td>\n            <td width=\"20%\" class=\"text-right\" style='border-bottom-color:white;'>\n                {{doc.get_formatted(\"total\") }}\n            </td>\n        </tr>\n        <tr>\n            <td width=\"80%\" class=\"text-right\" style='border-bottom-color:white;padding-bottom: 0px !important;'>\n                {{'VAT (+)'}}\n            </td>\n            <td width=\"20%\" class=\"text-right\" style='border-bottom-color:white;padding-bottom: 0px !important;'>\n                {{ doc.get_formatted(\"total_taxes_and_charges\") }}\n            </td>\n        </tr>\n        <tr>\n            <td width=\"80%\" class=\"text-right\" style='background-color:#c3c7ca!important;color:white;'>\n                {{'Net Amount'}}\n            </td>\n            <td width=\"20%\" class=\"text-right\" style='background-color:#c3c7ca!important;color:white;'>\n                {{ doc.get_formatted(\"rounded_total\") }}\n            </td>\n        </tr>\n    </tbody>\n</table>",
